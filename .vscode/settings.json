{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "numso.prettier-standard-vscode"
  },
  "json.schemas": [
    {
      "fileMatch": [".reactgenrc", ".reactgenrc.json"],
      "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "JSON Schema for React Generator configuration files.",
        "description": "⚡️ An opinionated CLI that generates boilerplate code instantly.",
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "componentsPath": {
            "type": "string",
            "description": "The folder where components will be created.",
            "default": "src/components"
          },
          "hooksPath": {
            "type": "string",
            "description": "The path where hooks will be created.",
            "default": "src/hooks"
          },
          "withTests": {
            "type": "boolean",
            "description": "Whether to include a test example.",
            "default": true
          },
          "withStyles": {
            "type": "boolean",
            "description": "Whether to include a CSS module.",
            "default": true
          },
          "defaultExport": {
            "type": "boolean",
            "description": "Whether to export as default.",
            "default": true
          },
          "typescript": {
            "oneOf": [
              {
                "type": "boolean",
              },
              {
                "type": "string",
                "enum": ["auto"]
              }
            ],
            "description": "Whether to use Typescript.",
            "default": "auto"
          },
          "formatCmd": {
            "type": "string",
            "description": "",
            "default": "prettier --write"
          }
        }
      }
    }
  ]
}